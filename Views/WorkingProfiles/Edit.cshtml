@model NoResume.Models.WorkingProfile

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutPrivate";
}

<h5 class="center-align">Your working Profile</h5>
<h6 class="center-align">(To view your public profile visit <a asp-action="Index" asp-controller="Home" target="_blank">Home</a> and type <strong class="green-text">@ViewBag.loggedInUserName</strong> ) </h6>
<hr />
<div class="row">
    <div class="col s12">
        <form asp-action="Edit" id="formWorkingProfile">
            <div asp-validation-summary="ModelOnly" class="red-text text-darken-3"></div>
            <input type="hidden" asp-for="DeveloperId" />
            
            <div class="row">
                <div class="input-field col s6">
                    <label asp-for="GithubUsername" class="control-label grey-text"></label>
                    <input asp-for="GithubUsername" class="form-control" />
                    <span asp-validation-for="GithubUsername" class="red-text"></span>    
                </div>
                
                <div class="input-field col s6">
                    <p>
                        <label>
                            <input type="checkbox" asp-for="PrivacyForGithub" class="filled-in" />
                            <span class="grey-text">@Html.DisplayNameFor(model => model.PrivacyForGithub)</span>
                        </label>
                    </p>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s6">
                    <label asp-for="CodeforcesUsername" class="control-label  grey-text"></label>
                    <input asp-for="CodeforcesUsername" class="form-control" />
                    <span asp-validation-for="CodeforcesUsername" class="red-text"></span>    
                </div>
                
                
                
                <div class="input-field col s6">
                    <p>
                        <label>
                            <input type="checkbox" asp-for="PrivacyForCodeforces" class="filled-in" />
                            <span class="grey-text">@Html.DisplayNameFor(model => model.PrivacyForCodeforces)</span>
                        </label>
                    </p>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s6">
                    <label asp-for="UhuntUsername" class="control-label grey-text"></label>
                    <input asp-for="UhuntUsername" class="form-control" />
                    <span asp-validation-for="UhuntUsername" class="red-text"></span>    
                </div>
                
                <div class="input-field col s6">
                    <p>
                      <label>
                        <input type="checkbox" asp-for="PrivacyForUhunt" class="filled-in" />
                        <span class="grey-text">@Html.DisplayNameFor(model => model.PrivacyForUhunt)</span>
                      </label>
                    </p>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-green" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_WProfileQueriFy");
    }
}
