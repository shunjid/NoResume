@model NoResume.Models.ShortBio

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutPrivate";
}


<h5 class="center-align indigo-text text-darken-2">Your ShortBio</h5>

<h6 class="center-align">(To view your public profile visit <a asp-action="Index" asp-controller="Home" target="_blank">Home</a> and type <strong class="green-text">@ViewBag.loggedInUserName</strong> ) </h6>
<hr/>
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    @ViewBag.loggedInUserName
                    @if (Model.CurrentCity != "")
                    {
                        <span>(</span>
                        <b id="DevCurrentCity">@Html.DisplayFor(model => model.CurrentCity)</b>
                        <span>)</span>
                    }
                </span>
                <span id="DevShortDescription">@Html.DisplayFor(model => model.ShortDescription)</span>
            </div>
            <div class="card-action">
                <a class="grey-text">Job Availability : </a>
                @{
                    var jobAvailability = Model.IsAvailableForJob ? "Yes" : "No";
                }
                <a id="DevJobAvailability" class="blue-text">@jobAvailability</a>
            </div>
        </div>
    </div>
</div>

@{
    if (ViewBag.subscriptionStatus == "No")
    {
        <div class="row">
            <div class="col s12">
                <form id="subscriptionForm">
                    <div class="row">
                        <div class="input-field col s12">
                            <input name="PhoneNumber" id="PhoneNumber" type="number" class="validate" value="@Model.DeveloperPhoneNumber">
                            <label for="PhoneNumber">Phone Number</label>
                        </div>
                        <div class="center-align">
                            <input type="submit" value="Pay with GP" class="btn blue darken-3"/>
                        </div>
                    </div>
                </form>
                <div id="modal1" class="modal">
                            <div class="modal-content">
                                <div class="col s12" id="agreement">
                                    <div class="center-align teal-text text-darken-3"><h6><b>User Payment Roadmap</b></h6></div>
                                    <table class="responsive-table centered">
                                        <thead>
                                            <tr>
                                                <th>Area of Billing</th>
                                                <th>Bill</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Link activation fee</td>
                                                <td>5.00 BDT</td>
                                            </tr>
                                            <tr>
                                                <td>Vat, SC, SD</td>
                                                <td>1.38 BDT</td>
                                            </tr>
                                            <tr>
                                                <td><b>Total</b></td>
                                                <td>6.38 BDT</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <p>Do you wish to continue with the payment?</p><br>
                                    <div class="center-align">
                                        <input type="button" id="rejectbtn" value="no" class="btn red darken-3"/>
                                        <input type="button" id="acceptbtn" value="yes" class="btn green darken-3"/>
                                    </div><br>
                                </div>
                                <form class="col s12" id="otpForm">
                                    <div class="row">
                                        <div class="center-align">
                                            <div class="input-field col s12">
                                                <input name="otp" id="otp" type="number" class="validate">
                                                <label for="otp">A code has sent in your GP number. Please input OTP number</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="center-align">
                                        <input type="submit" value="Activate" class="btn blue darken-3"/>
                                    </div><br>
                                </form>
                            </div>
                        </div>
            </div>
        </div>
    }
    else
    {
        var url = "/dev/"+@ViewBag.loggedInUserName;
        <div class="card-alert card green center-align">
                <div class="card-content white-text">
                  <p class="white-text"><b>You have been subscribed. Your premium template link is</b> 
                    <a class="yellow-text text-lighten-3" href="@url" target="_blank"><b>Here</b></a></p>
                </div>
              </div>
    }
}

<div class="row">
    <div class="col s12">
        <div class="card z-depth-2">
            <div class="card-content">
                <div class="center-align">
                    <h5 class="indigo-text text-darken-2">Update your Bio</h5>
                </div>
                <form asp-action="Edit" id="BioEditorForm">
                    <div asp-validation-summary="ModelOnly" class="red-text text-darken-2"></div>
                    <input type="hidden" asp-for="DeveloperId"/>
                    <br/>
                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="DeveloperName" class="form-control"/>
                            <label asp-for="DeveloperName" class="control-label">Full Name</label>
                            <span asp-validation-for="DeveloperName" class="red-text"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">

                            <input asp-for="DeveloperPhoneNumber" class="form-control"/>
                            <label asp-for="DeveloperPhoneNumber" class="validate">Phone Number</label>
                            <span asp-validation-for="DeveloperPhoneNumber" class="red-text"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8">
                            <input asp-for="CurrentCity" class="validate"/>
                            <label asp-for="CurrentCity">Current City</label>
                            <span asp-validation-for="CurrentCity" class="red-text"></span>
                        </div>

                        <div class="input-field col s4">
                            <p>
                                <label>
                                    <input type="checkbox" asp-for="IsAvailableForJob" class="filled-in"/>
                                    <span class="grey-text">@Html.DisplayNameFor(model => model.IsAvailableForJob)</span>
                                </label>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <label asp-for="ShortDescription" class="control-label"></label>
                            <textarea asp-for="ShortDescription" class="form-control" ></textarea>
                            <span asp-validation-for="ShortDescription" class="purple-text text-darken-3"></span>
                        </div>
                    </div>
                    <div class="center-align">
                        <input type="submit" value="Update" class="btn blue darken-3"/>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_Editor");
        await Html.RenderPartialAsync("_BioAjaxiFy");
    }
}